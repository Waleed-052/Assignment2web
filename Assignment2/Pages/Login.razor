@page "/Login"
@using System.ComponentModel.DataAnnotations;
<head>
    <link rel="stylesheet" href="~/css/StyleSheet1.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<img src="/css/open-iconic/login-banner.png" class="img-fluid w-100 border-top border-info" style=" box-shadow: rgba(0, 0, 0, 0.16) 0px 3px 6px, rgba(0, 0, 0, 0.23) 0px 3px 6px;">

<section class="h-100 bg-light">
    <div class="container py-5 h-100" style="box-shadow: rgba(0, 0, 0, 0.25) 0px 54px 55px, rgba(0, 0, 0, 0.12) 0px -12px 30px, rgba(0, 0, 0, 0.12) 0px 4px 6px, rgba(0, 0, 0, 0.17) 0px 12px 13px, rgba(0, 0, 0, 0.09) 0px -3px 5px;">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card card-registration my-4">
                    <div class="row g-0">
                        <div class="col-xl-6 d-none d-xl-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img4.webp"
                                 alt="Sample photo" class="img-fluid"
                                 style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
                        </div>
                        <div class="col-xl-6">
                            <EditForm Model="@_employee" OnValidSubmit="HandleValidSubmit">
                                <DataAnnotationsValidator />
                                <ValidationSummary />
                                <div class="card-body p-md-5 text-black">
                                    <h3 class="mb-5 text-uppercase">Login</h3>

                                    <div class="form-outline mb-4">
                                        <input @bind-value="_employee.Email" type="email" id="form3Example8" class="form-control form-control-lg" placeholder="Email" name="Email" />
                                    </div>
                                    <div class="form-outline mb-4">
                                        <input @bind-value="_employee.Password" type="password" id="form3Example8" class="form-control form-control-lg" placeholder="Password" name="Password" />
                                    </div>

                                    <div class="d-flex justify-content-end pt-3">

                                        <button type="submit" class="btn btn-primary btn-lg ms-2">Login</button>
                                    </div>

                                </div>
                            </EditForm>
                            <a style="font-size:50px; margin-left:140px" href="#" class="fa fa-facebook"></a>
                            <a style="font-size:50px" href="#" class="fa fa-instagram"></a>
                            <a style="font-size:50px" href="#" class="fa fa-twitter"></a>
                            <a style="font-size:50px" href="#" class="fa fa-google"></a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</section>


<br />
<br />

@code {
    public class Employee
    {
        [Required(ErrorMessage = "Please Enter yours Email Address.")]

        public string Email { get; set; }

        [Required(ErrorMessage = "Please enter the password.")]
        public string Password { get; set; }
    }

    private Employee _employee = new Employee();

    private void HandleValidSubmit()
    {
        Console.WriteLine("OnValidSubmit");
    }
}
